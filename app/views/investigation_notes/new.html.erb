<div class="row">
  <div class="col s7">
    <div class="card">    
      <div class="card-content">
        <h4>Add Investigation Note</h4><br />
        <%= simple_form_for(@investigation_note) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <h5>For:&nbsp;<%= @investigation.title %> </h5>
            <h5>By:&nbsp;&nbsp;<%= current_user.officer.proper_name %></h5>
            <div class="form-inputs">
              <%= f.input :content, label_html: { class: 'active' } %>
              <%= f.input :investigation_id, as: :hidden, input_html: { value: @investigation.id } %>
            </div>
          </div>
          <div class="row">
            <div class="form-actions col s8">
              <%= f.button :submit %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col s5">
    &nbsp;
  </div>
</div>
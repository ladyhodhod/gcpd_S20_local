<% unless @current_assignments.empty? %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Current Assignments</span>
      <table class="lined">
        <thead>
          <th>Officer</th>
          <th>Starting</th>
        </thead>
          <% for assignment in @current_assignments %>
            <tr>
              <td>
                  <%= link_to(terminate_assignment_path(assignment), class: 'remove', method: :patch) do %>
                    x&nbsp;&nbsp;
                  <% end %>
                &nbsp;<%= link_to assignment.officer.name, officer_path(assignment.officer) %>
              </td>
              <td><%= assignment.start_date.strftime("%m/%d/%y") %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
<% else%>
    <div class="card grey lighten-3">
      <div class="card-action">
        <h6>No assignments at this time</h6>
      </div>
    </div>
<% end%>